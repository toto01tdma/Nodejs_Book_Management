{
  "name": "nodejs_book_management",
  "version": "1.0.0",
  "description": "A complete Book Management System with CRUD operations",
  "main": "dist/server.js",
  "scripts": {
    "dev": "concurrently \"npm run build:css\" \"npm run dev:server\"",
    "dev:server": "nodemon --exec ts-node server.ts",
    "build": "npm run build:ts && npm run build:css:prod",
    "build:ts": "tsc",
    "build:prod": "NODE_ENV=production npm run build",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "build:css": "tailwindcss -i ./src/input.css -o ./public/css/style.css --watch",
    "build:css:prod": "NODE_ENV=production tailwindcss -i ./src/input.css -o ./public/css/style.css --minify",
    "clean": "rm -rf dist && rm -f public/css/style.css",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toto01tdma/Nodejs_Book_Management.git"
  },
  "keywords": [
    "nodejs",
    "express",
    "postgresql",
    "book-management",
    "crud"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/toto01tdma/Nodejs_Book_Management/issues"
  },
  "homepage": "https://github.com/toto01tdma/Nodejs_Book_Management#readme",
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.6.5",
    "pg": "^8.11.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.10",
    "@types/mysql": "^2.15.21",
    "@types/node": "^20.10.4",
    "@types/pg": "^8.10.9",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.3.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
